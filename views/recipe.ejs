<%- include('partials/header') -%>
<div class="bg-gray-200 dark:bg-gray-900 lg:m-20">
<div class=" flex flex-col my-5 ">
  <h1
    class="text-lg text-center my-5 font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-3xl dark:text-white">
    <%= recipe.title %></h1>
  </div>
  <div class="max-w-3xl mx-auto my-5">
    <img class=" h-auto self-center" src="<%= recipe.image %>" alt="image description">
  </div>
  <!-- Recipe Table -->
  <div class="overflow-x-auto max-w-3xl mx-auto my-5 relative shadow-md sm:rounded-lg lg:mx-20">
    <table class="w-full text-sm text-left text-gray-white dark:text-gray-400">
      <thead class="text-xs text-white bg-gray-500 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6 text-center">
            Ingredients list 
          </th>
        </tr>
      </thead>
      <tbody>
        <% recipe.ingredients.forEach( (ingredient)=> { %>
          <tr class="bg-gray-300 border-b dark:bg-gray-900 dark:border-gray-700">
            <th scope="row" class="py-4 px-6 font-medium text-gray-700 whitespace-nowrap dark:text-white">
                <input type="checkbox" value=""
                  class="w-4 h-4 mr-5 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800"
                  required=""><span><%= ingredient %></span>
            </th>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <h2 class="text-4xl mt-5 text-center font-extrabold dark:text-white">Recipe method</h2>
    <p class="m-4 text-lg text-gray-500"><%= recipe.method %></p>

  </div>
</div>
<%- include('partials/footer') -%>

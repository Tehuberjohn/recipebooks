<%- include('partials/header') -%>

    <div class="max-w-3xl mx-auto mt-5">
      <img class=" h-auto self-center" src="/imgs/mainLogo.png" alt="image description">
    </div>

  <!-- Page heading -->
  <div class="flex flex-col mb-5">
    <h1
      class="mb-4 text-4xl text-center mt-5 font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
      Welcome back <span class="text-blue-900 dark:text-blue-500"><%= user.userName %>!</span></h1>
    <p class="mb-6 text-lg mx-5 font-normal text-center text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Here You can find your saved recipes! click the edit button to update / delete selected recipe!</p>
    <a href="/recipe/newRecipe"
      class="inline-flex w-1/3 text-center self-center py-2 px-5 text-lg font-medium text-center text-white bg-green-700 rounded-lg hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">
      <span class="mx-auto">Add Recipe</span>
    </a>
  </div>

  <!-- Recipe Table -->
  <div class="overflow-x-auto  mx-5 relative shadow-md sm:rounded-lg lg:mx-20">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-white uppercase bg-gray-500 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6">
            Recipe
          </th>
          <th scope="col" class="py-3 px-6">
            Status
          </th>
          <th scope="col" class="py-3 px-6">
            Edit
          </th>
        </tr>
      </thead>
      <tbody>
        <% recipes.forEach( (recipe,i) => { %>
          <tr class="bg-gray-200 border-b dark:bg-gray-900 dark:border-gray-700">
            <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <a href="/recipe/showRecipe/<%= recipe._id%>">
                <%= recipe.title %>
              </a>
            </th>
            <td class="py-4 px-6">
              <%= recipe.status %>
            </td>
            <td class="py-4 px-6">
              <%if(recipe.user==user.id){ %>
                <form action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE" method="POST" class="">
                  <button class="btn btn-primary fa fa-trash" type="submit">Delete</button>
                </form>
                <%}%>
            </td>
          </tr>
          <% }) %>        
      </tbody>
    </table>
  </div>


